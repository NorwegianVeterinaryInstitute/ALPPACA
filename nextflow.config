/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    NorwegianVeterinaryInstitute/ALPPACA Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

// Global default params, used in configs
params {

	// Input options
	assemblies		= null
	reads			= null

	// Core gene analysis options
	prokka_additional	= ""
	refdb			= null
	clean_mode		= null

	// Core genome analysis options
	parsnp_ref		= "!"
	
	// Mapping analysis options
	snippyref		= null
	R1			= null
	R2			= null
	suffix			= null

	// General options
	deduplicate		= false
	filter_snps		= true
	treebuilder		= "raxml"
	gubbinsmodel		= "GTRGAMMA"
	iqtree_model		= "GTR+I+F"
	mset			= "HKY,GTR,SYM"
	cmax			= "6"
	bootstrap		= "1000"
	outgroup		= null
}

// Define profiles
profiles {
    debug { process.beforeScript = 'echo $HOSTNAME' }
    conda {
        params.enable_conda    = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        docker.enabled         = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    podman {
        podman.enabled         = true
        docker.enabled         = false
        singularity.enabled    = false
        shifter.enabled        = false
        charliecloud.enabled   = false
    }
    shifter {
        shifter.enabled        = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        charliecloud.enabled   = false
    }
    charliecloud {
        charliecloud.enabled   = true
        docker.enabled         = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
    }
}

// Manifest
manifest {
    name            = 'NorwegianVeterinaryInstitute/ALPPACA'
    author          = 'HÃ¥kon Kaspersen'
    homePage        = 'https://github.com/NorwegianVeterinaryInstitute/ALPPACA'
    description     = 'A Tool for Prokaryotic Phylogeny and Clustering Analysis'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=21.10.6'
    version         = '1.0.4'
}

// Container definitions
process {
	withName: PARSNP {
		container = 'quay.io/biocontainers/parsnp:1.6.1--h9a82719_0'
	}
	withName: SNIPPY {
		container = 'quay.io/biocontainers/snippy:4.6.0--hdfd78af_1'
	}
        withName: PANAROO_PANGENOME {
                container = 'quay.io/biocontainers/panaroo:1.2.9--pyhdfd78af_0'
        }
	withName: PANAROO_QC {
		container = 'quay.io/biocontainers/panaroo:1.2.9--pyhdfd78af_0'
	}
	withName: IQTREE {
		container = 'quay.io/biocontainers/iqtree:2.1.4_beta--hdcc8f71_0'
	}
        withName: IQTREE_FCONST {
                container = 'quay.io/biocontainers/iqtree:2.1.4_beta--hdcc8f71_0'
        }
	withName: GUBBINS {
		container = 'quay.io/biocontainers/gubbins:3.2.0--py39pl5321h87d955d_1'
	}
	withName: MASKRC {
		container = 'quay.io/biocontainers/maskrc-svg:0.5--1'
	}
	withName: PROKKA {
		container = 'quay.io/biocontainers/prokka:1.14.6--pl5262hdfd78af_1'
	}
	withName: DEDUPLICATE {
		container = 'quay.io/biocontainers/seqkit:2.1.0--h9ee0642_0'
	}
	withName: SNPDIST {
		container = 'quay.io/biocontainers/snp-dists:0.8.2--h5bf99c6_0'
	}
	withName: SNPSITES {
		container = 'quay.io/biocontainers/snp-sites:2.5.1--h5bf99c6_1'
	}
        withName: SNPSITES_FCONST {
                container = 'quay.io/biocontainers/snp-sites:2.5.1--h5bf99c6_1'
        }
        withName: REPORT_CORE_GENOME_DEDUP {
                container = 'library://hkaspersen/alppaca/r_base_4.1.2_alppaca:latest'
        }
        withName: REPORT_CORE_GENE_DEDUP {
                container = 'library://hkaspersen/alppaca/r_base_4.1.2_alppaca:latest'
        }
        withName: REPORT_MAPPING_DEDUP {
                container = 'library://hkaspersen/alppaca/r_base_4.1.2_alppaca:latest'
        }
	withName: REPORT_CORE_GENOME {
		container = 'library://hkaspersen/alppaca/r_base_4.1.2_alppaca:latest'
	}
        withName: REPORT_CORE_GENE {
                container = 'library://hkaspersen/alppaca/r_base_4.1.2_alppaca:latest'
        }
        withName: REPORT_MAPPING {
                container = 'library://hkaspersen/alppaca/r_base_4.1.2_alppaca:latest'
        }
}

