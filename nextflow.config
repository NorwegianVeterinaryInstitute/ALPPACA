process {
    executor = 'slurm'
    clusterOptions = '--job-name=PhyloFlow --account=nn9305k --mem-per-cpu=4700M'
    queueSize = 24
    maxRetries = 1
    errorStrategy='retry'

    cpus = 4
    withLabel: regular {cpus = 4}
    withLabel: medium {cpus = 8}
    withLabel: heavy {cpus = 16}

    time = { 1.h * task.attempt }
    withLabel: longtime {time = { 4.h * task.attempt }}
}
